.container

    .row
        .col-md-6
            .panel.panel-primary
                .panel-heading
                    h1 {{course.title}}
                .panel-body
                img(href="/courses/{{course._id}}" src="./img/{{course.img}}.jpg")

        .col-md-3
            .panel.panel-primary
                .panel-heading Tags
                .panel-body
                    div(ng-repeat="tag in course.tags") {{tag}}
